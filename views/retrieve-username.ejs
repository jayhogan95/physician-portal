<%- include("./partials/global-header") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form action="/retrieve-username" method="POST">
				<legend>Retrieve Username</legend>
				<p>Enter the email address associated with your account</p>
				<hr>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" autofocus class="form-control">
				</div>
				<div class="form-group">
					<input type="submit" class="btn button-style btn-md global-btn" value="Submit">
				</div>
			</form>
		</div>
	</div>
</div>

