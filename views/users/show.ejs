<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div>
				<h4 class="profile-header">Username: <%= user.username %></h4>
				<% if (user.avatar === "") { %>
					<img class="avatar" src="https://www.state.gov/wp-content/uploads/2018/11/Sweden-2109x1406.jpg">
				<% } else { %>
					<img class="avatar" src="<%= user.avatar %>">
				<% } %>
			</div>
			<a class="btn button-style btn-md green-btn float-right" id="md-spacing" href="/users/<%= user._id %>/edit" role="button">Edit Information</a>
			<table class="table table-striped">
				<tbody>
					<tr>
						<th scope="row">Full Name</th>
						<td><%= user.firstName + " " + user.lastName %></td>
					</tr>
					<tr>
						<th scope="row">Email</th>
						<td><%= user.email %></td>
					</tr>
					<tr>
						<th scope="row">Role</th>
						<td><%= user.role %></td>
					</tr>
					<% if (user.isAdmin) { %>
						<tr>
							<th scope="row">Admin</th>
							<td><a class="btn button-style btn-sm green-btn" id="md-spacing" href="/admin" role="button">Admin Page</a></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>