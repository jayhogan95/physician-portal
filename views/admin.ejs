<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div>
				<h4 class="admin-header">Users</h4>
			</div>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Username</th>
						<th scope="col">First Name</th>
						<th scope="col">Last Name</th>
						<th scope="col">Email</th>
						<th scope="col">Admin</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% users.forEach(function(user) { %>
						<tr>
							<td scope="row"><%= user.username %></td>
							<td><%= user.firstName %></td>
							<td><%= user.lastName %></td>
							<td><%= user.email %></td>
							<!--<td><%= user.isAdmin %></td>-->
							<% if (user.isAdmin) { %>
								<td><input type="checkbox" checked disabled></td>
							<% } else { %>
								<td><input type="checkbox" disabled></td>
							<% } %>
							<td><a class="btn button-style btn-sm green-btn px-3" href="/users/<%= user._id %>/edit" role="button">Edit</a></td>
							<td>
								<form id="delete-form" action="/users/<%= user._id %>?_method=DELETE" method="POST">
									<button class="btn button-style btn-sm delete-btn" id="delete-form">Delete</button>
								</form>
							</td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>